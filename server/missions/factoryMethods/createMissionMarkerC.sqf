private ["_text", "_pos", "_marker", "_icon"];

_text = _this select 0;
_pos = _this select 1;
_icon = _this select 2;

_marker = format ["mission_%1_%2", [_text] call fn_filterString, call A3W_fnc_generateKey];
_marker = createMarker [_marker, _pos];
_marker setMarkerType "c_air";
if(_icon != "") then {
    _marker setMarkerType _icon;
};
_marker setMarkerSize [0.93, 0.93];
_marker setMarkerColor "ColorGreen";
_marker setMarkerText "ENDED";

